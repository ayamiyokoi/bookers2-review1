<% if book.favorited_by?(current_user) %>
   <%= link_to(book_favorites_path(book), method: :delete, remote: true, id: :"favorite-button-#{book.id}") do %>
       <i class="fa-lg fas fa-heart icon-btn liked"></i><%= book.favorites.count %>
   <% end %>
<% else %>
   <%= link_to(book_favorites_path(book), method: :post, remote: true, id: :"favorite-button-#{book.id}") do %>
       <i class="fa-lg fas fa-heart icon-btn not-like"></i><%= book.favorites.count %>
   <% end %>
<% end %>